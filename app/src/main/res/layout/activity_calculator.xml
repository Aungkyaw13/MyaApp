    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:background="#128692F7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </View>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.1dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/container1"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:text="Calcultor"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/etCalculator"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/etCalculator"
        android:textStyle="bold"
        android:layout_below="@+id/container"
        />

    <TextView
        android:id="@+id/tvOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="3 + 3"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCalculator"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tvOperation"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvOperation"
        android:background="@drawable/bg_edittext"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/tvOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCalculator"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:text="Addition (+)"
        app:layout_constraintTop_toBottomOf="@id/etCalculator"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold" />


            <GridLayout
                android:id="@+id/girdlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="4">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_rowWeight="0.1"
                    android:layout_columnWeight="2"
                    android:background="@drawable/bg_button"
                    android:onClick="onNumberClicked"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_rowWeight="0.1"
                    android:layout_columnWeight="2"
                    android:background="@drawable/bg_button"
                    android:onClick="onNumberClicked"
                    android:text="2"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button"
                    android:onClick="onNumberClicked"
                    android:text="3"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btAdd"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button_operator"
                    android:onClick="onOperatorClicked"
                    android:text="+"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button"
                    android:onClick="onNumberClicked"
                    android:text="4"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button"
                    android:onClick="onNumberClicked"
                    android:text="5"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button"
                    android:onClick="onNumberClicked"
                    android:text="6"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btSubtract"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button_operator"
                    android:onClick="onOperatorClicked"
                    android:text="-"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button"
                    android:onClick="onNumberClicked"
                    android:text="7"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button"
                    android:onClick="onNumberClicked"
                    android:text="8"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button"
                    android:onClick="onNumberClicked"
                    android:text="9"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btMultiply"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button_operator"
                    android:onClick="onOperatorClicked"
                    android:text="*"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnclear"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button_clear"
                    android:onClick="onClearClicked"
                    android:text="AC"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button"
                    android:onClick="onNumberClicked"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btEqual"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button_operator"
                    android:onClick="onOperatorClicked"
                    android:text="="
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btDivide"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_button_operator"
                    android:onClick="onOperatorClicked"
                    android:text="/"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </GridLayout>






</LinearLayout>