<!--<?xml version="1.0" encoding="utf-8"?>-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131627"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/layot_top_btn"
        android:background="#131627"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back_btn"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_backarrow"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="34dp"
            android:layout_toEndOf="@id/back_btn"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Now Playing"
            android:textColor="@color/colorGray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/menu_btn"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_menu"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/card"
        android:layout_below="@+id/layot_top_btn">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/justinb"
            android:scaleType="centerCrop"
            android:id="@+id/iv_artist"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageViewGrdient"
            android:src="@drawable/gradient_bg"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is song Name"
        android:id="@+id/tv_artist"
        android:layout_below="@id/card"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/colorGray"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!--    <TextView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="This is song Artist"-->
    <!--        android:id="@+id/song_artist"-->
    <!--        android:layout_below="@id/song_name"-->
    <!--        android:gravity="center_horizontal"-->
    <!--        android:textSize="18sp"-->
    <!--        android:textColor="@color/colorAccent"-->
    <!--        android:singleLine="true"-->
    <!--        android:ellipsize="end"-->
    <!--        android:layout_marginStart="40dp"-->
    <!--        android:layout_marginEnd="40dp"/>-->

    <RelativeLayout
        android:id="@+id/relative_layout_for_bottom"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="@dimen/_100sdp"
        android:background="@drawable/gradient_bg">

        <ImageView
            android:id="@+id/shuffle_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:backgroundTint="#3292DF"
            android:src="@drawable/shuffle" />

        <ImageView
            android:id="@+id/bt_previous"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@id/bt_pause"
            android:src="@drawable/ic_prev" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_pause"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:backgroundTint="#3ED2E5"
            android:focusable="true"
            app:rippleColor="@color/black"
            android:src="@drawable/ic_play" />

        <ImageView
            android:id="@+id/bt_next"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/bt_pause"
            android:src="@drawable/ic_next" />

        <ImageView
            android:id="@+id/repeat_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#3292DF"
            android:layout_toStartOf="@id/bt_pause"
            android:src="@drawable/repeat" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/musicSeekBar1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/relative_layout_for_bottom"
        android:layout_below="@+id/tv_artist"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/elapsedTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:text="1:28"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/totalTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:text="4:28"
            android:textColor="@color/white" />

        <SeekBar
            android:id="@+id/musicSeekBar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_fill"
            android:thumbTint="@color/colorPrimary"
            android:progressTint="#45A8F6"
            android:progressBackgroundTint="@color/colorGray"/>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2291EA"
        android:layout_above="@+id/nav_view"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        app:itemIconTint="#3292DF"
        app:itemTextColor="#3292DF"
        android:background="#131627"
        app:menu="@menu/bottom_menu" />


</RelativeLayout>